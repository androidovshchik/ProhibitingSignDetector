<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.dksta.prohibitingsigndetector.ActivityMain">

    <org.opencv.android.JavaCameraView
        android:id="@+id/javaCameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/settings"
        android:adjustViewBounds="true"
        opencv:camera_id="back" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/ic_settings_36dp"
        app:layout_heightPercent="25%"/>

    <ImageView
        android:id="@+id/play"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play_arrow_36dp"
        app:layout_heightPercent="25%"/>

    <ImageView
        android:id="@+id/layers"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/ic_filter_36dp"
        app:layout_heightPercent="25%"/>

</android.support.percent.PercentRelativeLayout>
