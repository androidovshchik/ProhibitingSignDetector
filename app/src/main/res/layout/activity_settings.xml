<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.dksta.prohibitingsigndetector.ActivitySettings">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/minThreshold"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_below="@+id/lowerThreshold"
            android:textSize="20sp"
            android:gravity="center"
            android:text="0 HUE"
            app:layout_widthPercent="50%"/>

        <TextView
            android:id="@+id/lowerThreshold"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="LOWER HUE"
            app:layout_widthPercent="50%"/>

        <TextView
            android:id="@+id/upperThreshold"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_toEndOf="@+id/lowerThreshold"
            android:layout_below="@+id/maxThreshold"
            android:textSize="20sp"
            android:gravity="center"
            android:text="UPPER HUE"
            app:layout_widthPercent="50%"/>

        <TextView
            android:id="@+id/maxThreshold"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_toEndOf="@+id/lowerThreshold"
            android:textSize="20sp"
            android:gravity="center"
            android:text="179 HUE"
            app:layout_widthPercent="50%"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/minThreshold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#b5b5b5"/>

        <CheckBox
            android:id="@+id/allowChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:text="Изменять значения" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/allowChanges"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#b5b5b5"/>

        <ImageView
            android:id="@+id/lowerHueUp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/divider2"
            android:src="@drawable/ic_arrow_drop_up_36dp"
            android:contentDescription="@string/app_name"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/upperHueUp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/divider2"
            android:layout_toEndOf="@+id/lowerHueUp"
            android:src="@drawable/ic_arrow_drop_up_36dp"
            android:contentDescription="@string/app_name"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/saturationUp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/divider2"
            android:layout_toEndOf="@+id/upperHueUp"
            android:src="@drawable/ic_arrow_drop_up_36dp"
            android:contentDescription="@string/app_name"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/blurUp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/divider2"
            android:layout_toEndOf="@+id/saturationUp"
            android:src="@drawable/ic_arrow_drop_up_36dp"
            android:contentDescription="@string/app_name"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/lowerHue"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/lowerHueUp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/button_lower_hue"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/upperHue"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/upperHueUp"
            android:layout_toEndOf="@+id/lowerHue"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/button_upper_hue"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/saturation"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/saturationUp"
            android:layout_toEndOf="@+id/upperHue"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/button_saturation"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/blur"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/blurUp"
            android:layout_toEndOf="@+id/saturation"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/button_blur"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/lowerHueDown"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/lowerHue"
            android:src="@drawable/ic_arrow_drop_down_36dp"
            android:contentDescription="@string/app_name"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/upperHueDown"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/upperHue"
            android:layout_toEndOf="@+id/lowerHueDown"
            android:src="@drawable/ic_arrow_drop_down_36dp"
            android:contentDescription="@string/app_name"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/saturationDown"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/saturation"
            android:layout_toEndOf="@+id/upperHueDown"
            android:src="@drawable/ic_arrow_drop_down_36dp"
            android:contentDescription="@string/app_name"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/blurDown"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/blur"
            android:layout_toEndOf="@+id/saturationDown"
            android:src="@drawable/ic_arrow_drop_down_36dp"
            android:contentDescription="@string/app_name"
            app:layout_widthPercent="25%"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/saturationDown"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#b5b5b5"/>

        <CheckBox
            android:id="@+id/rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider3"
            android:text="Отражать фрейм по вертикали" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rotation"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#b5b5b5"/>

        <CheckBox
            android:id="@+id/showInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider4"
            android:text="Показывать информацию" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/showInfo"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#b5b5b5"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.v4.widget.NestedScrollView>
